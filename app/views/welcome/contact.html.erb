<div id="wrapper">
	<!-- start header -->
	<header class="page">
		<%= render partial: "header" %>
	</header><!-- end header -->
  
  <%= render  partial: "headline" %> 

	<% flash.each do |name, msg| %>
		<div class="alert alert-<%= name %> text-center alert-dismissible fade in" id="contactSuccess">
			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			<strong>Success! <%= msg %> </strong>
		</div>
	<% end %>

	<section id="content">
	
		<div class="container">
				
			<div class="row">
		 		<div class="col-md-12">

					<div style="overflow:hidden;height:300px;width:100%;">
						<div id="gmap_canvas" style="height:300px;width:100%;"></div>
						<style>#gmap_canvas img{max-width:none!important;background:none!important}</style>
						<a class="google-map-code" href="http://www.trivoo.net" id="get-map-data">trivoo</a>
					</div>

					<script type="text/javascript">			

						function initMap(){
							var myOptions = {
								zoom: 8,
								center: new google.maps.LatLng(18.672971,73.942515),
								mapTypeId: google.maps.MapTypeId.ROADMAP
						  };
							map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
							marker = new google.maps.Marker({
								map: map,
								position: new google.maps.LatLng(18.672971, 73.942515)
							});
							infowindow = new google.maps.InfoWindow({
							  content:"<b>K & T BioTech</b><br/>Solu, Aalandhi-Markal Road<br/> Khed,Pune 412105"
							});
							google.maps.event.addListener(marker, "click", function(){
								infowindow.open(map,marker);
								map.setZoom(14);
								map.setCenter(marker.getPosition());
							});

							infowindow.open(map,marker);
						} google.maps.event.addDomListener(window, 'load', initMap);

					</script>

					<script async defer src="https://maps.googleapis.com/maps/api/	
						js?key=AIzaSyAFnmMKgI9g6gKqdqTFCosNVoQkjPQVKDk&callback=initMap">
					</script>

				</div>
	    </div>

			<div class="row">

				<div class="col-md-6">
					<div class="text-center"><h2>Get In Touch</h2></div><br>
					<div class="contact-form">
						
						<%= simple_form_for :contact_form, method: :post, url:  contact_form_url, html: { novalidate: true, class: "contact-form", role: "form" } do |user| %>

								<div class="form-group has-feedback">
									<label for="name">Name*</label>
									<input type="text" class="form-control" id="name" name="name" placeholder="">
									<i class="fa fa-user form-control-feedback"></i>
								</div>
								<div class="form-group has-feedback">
									<label for="email">Email*</label>
									<input type="email" class="form-control" id="email" name="email" placeholder="">
									<i class="fa fa-envelope form-control-feedback"></i>
								</div>
								<div class="form-group has-feedback">
									<label for="subject">Subject*</label>
								  <input type="text" class="form-control" id="subject" name="subject" placeholder="">
									<i class="fa fa-bars form-control-feedback"></i>
								</div>
								<div class="form-group has-feedback">
									<label for="contact_number">Contact Number*</label>
								  <input type="text" class="form-control" id="contact_number" name="contact_number" placeholder="">
									<i class="fa fa-phone form-control-feedback"></i>
								</div>							
								<div class="form-group has-feedback">
									<label for="message">Message*</label>
									<textarea class="form-control" rows="6" id="message" name="message" placeholder=""></textarea>
									<i class="fa fa-pencil form-control-feedback"></i>
								</div>
								<input type="submit" value="Submit" class="btn btn-default">

						<% end %>
					</div>
				</div>

				<div class="col-md-6">
					<div class="span4">
						<div class="title-box clearfix ">
							<div class="text-center">
								<h3 class="title-box_primary">Knt Bio's Contact info</h3>
							</div><br>
						</div> 
						<h5>
							We would love to hear from you. Please contact us and let us know how we can help.
						</h5>
						<address>
							<br>
							<strong>
								KntBio Tech .<br>
								Solu, Markal-Alandhi, Khed<br>
								pune, 412105.<br>
								Maharahtra, India.
							</strong><br><br>
								Telephone: +91 9822659759<br>
								E-mail: <a href="mailto:info@sitename.org">mail@sitename.org</a><br><br>
						</address>
					</div> 
				</div>
	    </div>

	  </div>
 
	</section>

	<%= render partial: "footer" %>

</div>

<a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>